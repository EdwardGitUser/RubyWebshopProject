<p style="color: green"><%= notice %></p>

<%= render @producer %>

<div>
  <%= link_to "Edit this producer", edit_producer_path(@producer) %> |
  <%= link_to "Back to producers", producers_path %>

  <%= button_to "Destroy this producer", @producer, method: :delete %>
</div>

<hr>
<h2>Всі коментарі</h2>
<% @producer.comments.each do |comment| %>

<p><strong><%= comment.username %> </strong></p>
<p><strong>Коментар: </strong><%= comment.body %></p>
<% end %>

<hr>
<h2> Коментувати </h2>
<%= form_for([@producer, @producer.comments.build]) do |f|%>
<p>
Користувач <br>
<%= f.text_field(:username, {:class =>'form-control'}) %>
</p>
<p>
Текст коментаря <br>
<%= f.text_area(:body, {:class =>'form-control'}) %>
</p>
<p>

<%= f.submit("Додати коментар", {:class =>'btn btn-success'})%>

</p>
<% end %>

<hr>

